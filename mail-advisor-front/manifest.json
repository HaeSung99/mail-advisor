{
  "manifest_version": 3,
  "name": "Naver Mail Top Panel Mirror",
  "version": "1.0.0",
  "description": "네이버 메일 본문 입력 내용을 최상단 패널에 실시간 미러링",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://mail.naver.com/*", "http://localhost:3000/*"],
  "action": {
    "default_title": "패널 토글"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.naver.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.css"],
      "matches": ["https://mail.naver.com/*"]
    }
  ]
}
