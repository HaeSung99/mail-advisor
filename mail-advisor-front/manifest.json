{
  "manifest_version": 3,
  "name": "메일 어드바이저",
  "version": "1.0.0",
  "description": "AI 기반 메일 작성 어시스턴트 - 네이버 메일을 위한 전문적인 메일 작성 도우미",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://mail.naver.com/*", "http://localhost:3000/*"],
  "action": {
    "default_title": "패널 토글"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.naver.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.css"],
      "matches": ["https://mail.naver.com/*"]
    }
  ]
}
